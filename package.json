{
  "name": "soagents",
  "description": "SoAgents - Desktop AI Agent Client powered by Claude Agent SDK",
  "type": "module",
  "version": "0.1.0",
  "license": "MIT",
  "author": "jingyu",
  "homepage": "https://github.com/applre/SoAgents",
  "repository": {
    "type": "git",
    "url": "https://github.com/applre/SoAgents.git"
  },
  "bugs": {
    "url": "https://github.com/applre/SoAgents/issues"
  },
  "keywords": [
    "ai",
    "agent",
    "claude",
    "tauri",
    "desktop",
    "claude-agent-sdk"
  ],
  "packageManager": "bun@1.3.6",
  "scripts": {
    "dev": "bun run dev:single",
    "dev:web": "vite",
    "dev:single": "bun run build:web --watch & bun run server",
    "build:server": "mkdir -p src-tauri/resources && bun build ./src/server/index.ts --outfile=./src-tauri/resources/server-dist.js --target=bun",
    "build:web": "vite build",
    "server": "bun src/server/index.ts",
    "start": "bun run build:web && bun run server",
    "tauri": "tauri",
    "tauri:dev": "tauri dev",
    "tauri:build": "tauri build",
    "typecheck": "tsc --noEmit",
    "email:dev": "email dev"
  },
  "dependencies": {
    "@anthropic-ai/claude-agent-sdk": "^0.2.44",
    "@codemirror/lang-css": "^6.3.1",
    "@codemirror/lang-html": "^6.4.11",
    "@codemirror/lang-javascript": "^6.2.4",
    "@codemirror/lang-json": "^6.0.2",
    "@codemirror/lang-markdown": "^6.5.0",
    "@codemirror/lang-python": "^6.2.1",
    "@codemirror/lang-rust": "^6.0.2",
    "@codemirror/theme-one-dark": "^6.1.3",
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/sortable": "^10.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "@react-email/components": "1.0.8",
    "@tailwindcss/typography": "^0.5.19",
    "@tauri-apps/api": "^2.9.1",
    "@tauri-apps/plugin-dialog": "^2.6.0",
    "@tauri-apps/plugin-fs": "^2.4.5",
    "@tauri-apps/plugin-process": "^2.3.1",
    "@tauri-apps/plugin-shell": "^2.3.4",
    "@uiw/react-codemirror": "^4.25.4",
    "lucide-react": "^0.554.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-markdown": "^10.1.0",
    "react-syntax-highlighter": "^16.1.0",
    "remark-gfm": "^4.0.1"
