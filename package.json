    "@react-email/preview-server": "5.2.8",
    "@tailwindcss/vite": "^4.1.17",
    "@tauri-apps/cli": "^2.9.6",
    "@types/node": "^25.2.3",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@types/react-syntax-highlighter": "^15.5.13",
    "@vitejs/plugin-react": "^5.1.1",
    "bun-types": "^1.3.9",
    "react-email": "5.2.8",
    "tailwindcss": "^4.1.16",
    "typescript": "^5.9.3",
    "vite": "^7.1.12"
  }
