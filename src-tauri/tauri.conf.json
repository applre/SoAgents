{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "SoAgents",
  "version": "0.1.1",
  "identifier": "com.soagents.app",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5174",
    "beforeDevCommand": "npm run dev:web",
    "beforeBuildCommand": "npm run build:server && npm run build:web"
  },
  "app": {
    "windows": [
      {
        "title": "SoAgents",
        "label": "main",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false,
        "center": true,
        "decorations": true,
        "transparent": false,
        "titleBarStyle": "Overlay",
        "hiddenTitle": true,
        "trafficLightPosition": { "x": 14, "y": 20 }
      }
    ],
    "security": {
      "csp": "default-src 'self' ipc: tauri:; script-src 'self' 'unsafe-inline'; style-src 'self' 'unsafe-inline'; font-src 'self' data:; connect-src 'self' ipc: tauri: http://localhost:* http://127.0.0.1:*; img-src 'self' data: blob: asset: http://asset.localhost;",
      "assetProtocol": {
        "enable": true,
        "scope": {
          "requireLiteralLeadingDot": false,
          "allow": ["**/*"]
        }
      }
    }
  },
  "plugins": {
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEM3NjhCQkE0NjU4NDRCM0QKUldROVM0UmxwTHRveC9vbTlXei92QXJTNzFDejErSUNhOGhOQ2ZGK0xISWhqMy8xZVIxampULzQK",
      "endpoints": [
        "https://download.soagents.ai/update/{{target}}.json"
      ]
    }
  },
  "bundle": {
    "active": true,
    "createUpdaterArtifacts": true,
    "targets": ["dmg", "app"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": {
      "resources/server-dist.js": "server-dist.js",
      "resources/bundled-skills": "bundled-skills"
    },
    "externalBin": [
      "binaries/bun"
    ]
  }
}
